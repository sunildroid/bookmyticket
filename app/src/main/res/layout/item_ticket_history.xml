
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding"
    android:padding="@dimen/padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_ticket_row">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin"
            android:gravity="start"
            android:textColor="@color/color_ticket_id"
            android:textSize="@dimen/text_size_ticket_id" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin"
            android:layout_toEndOf="@id/tvId"
            android:layout_toRightOf="@id/tvId"
            android:gravity="end"
            android:textColor="@color/color_ticket_id"
            android:textSize="@dimen/text_size_ticket_id" />

        <TextView
            android:id="@+id/tvFromStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvId"
            android:layout_margin="@dimen/margin"
            android:textColor="@color/color_ticket_stations"
            android:textSize="@dimen/text_size_ticket_stations" />

        <TextView
            android:id="@+id/tvToStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvId"
            android:layout_margin="@dimen/margin"
            android:textColor="@color/color_ticket_stations"
            android:textSize="@dimen/text_size_ticket_stations" />

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvFromStation"
            android:layout_margin="@dimen/margin"
            android:textColor="@color/color_ticket_date_time"
            android:textSize="@dimen/text_size_ticket_date_time" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvFromStation"
            android:layout_margin="@dimen/margin"
            android:textColor="@color/color_ticket_date_time"
            android:textSize="@dimen/text_size_ticket_date_time" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvDateTime"
            android:layout_alignParentRight="true"

            android:layout_margin="@dimen/margin"
            app:srcCompat="@drawable/ic_menu_share" />

    </RelativeLayout>
</android.support.v7.widget.CardView>